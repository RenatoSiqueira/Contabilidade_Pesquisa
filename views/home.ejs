<% include partials/header %>

<body>

    <div class="jumbotron">
        <h1 class="display-4">Cadastro</h1>
        <hr class="my-4">
        <form method="POST">
            <p>
                Curso
                <% obj.curso.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="curso" id="<%= item %>" value="<%= item %>"
                        required>
                    <label class="form-check-label" for="<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Turno
                <% obj.turno.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="turno" id="<%= item %>" value="<%= item %>"
                        required>
                    <label class="form-check-label" for="<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Sexo
                <% obj.sexo.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="sexo" id="<%= item %>" value="<%= item %>"
                        required>
                    <label class="form-check-label" for="<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Idade
                <% obj.idade.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="idade" id="<%= item %>" value="<%= item %>"
                        required>
                    <label class="form-check-label" for="<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <p>
                Possui Renda?
                <% obj.possuirenda.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="possuirenda" id="possuirenda<%= item %>"
                        value="<%= item %>" required>
                    <label class="form-check-label" for="possuirenda<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Tem Planejamento?
                <% obj.planejamento.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="planejamento" id="planejamento<%= item %>"
                        value="<%= item %>" required>
                    <label class="form-check-label" for="planejamento<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Valor Renda:
                <% obj.valorrenda.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="valorrenda" id="<%= item %>" value="<%= item %>"
                        required>
                    <label class="form-check-label" for="<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Usa Cartão ?
                <% obj.usacartao.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="usacartao" id="usacartao<%= item %>"
                        value="<%= item %>" required>
                    <label class="form-check-label" for="usacartao<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Endividamento:
                <ul class="list-group">
                    <% obj.endividamento.map( item => { %>
                    <li class="list-group-item">
                        <div class="form-group">

                            <label for="<%= item %>" style="margin-right: 1rem;">
                                <strong><%= item %>:</strong></label>
                            <% for(i = 0; i <= 5; i++) { %>
                            <div class="form-check form-check-inline form-control-lg">
                                <input class="form-check-input" type="radio" name="<%= item %>" id="<%= item %><%= i %>"
                                    value="<%= i %>" required>
                                <label class="form-check-label" for="<%= item %><%= i %>"><%= i %></label>
                            </div>
                            <% } %>
                        </div>
                    </li>
                    <% }) %>
                </ul>
            </p>
            <hr />
            <p>
                Está Inadimplente?
                <% obj.inadimplente.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="inadimplente" id="inadimplente<%= item %>"
                        value="<%= item %>" required>
                    <label class="form-check-label" for="inadimplente<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <p>
                Já esteve Inadimplente?
                <% obj.esteveinadimplente.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="esteveinadimplente"
                        id="esteveinadimplente<%= item %>" value="<%= item %>" required>
                    <label class="form-check-label" for="esteveinadimplente<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
                <div>
                    Se Sim, Qto Tempo: <input type="text" name="esteveinadimplenteTempo" id="esteveinadimplenteTempo">
                </div>
            </p>
            <hr />
            <p>
                Se Entendesse, Teria Controle Melhor?
                <% obj.teriacontrole.map( item => { %>
                <div class="form-check form-check-inline form-control-lg">
                    <input class="form-check-input" type="radio" name="teriacontrole" id="teriacontrole<%= item %>"
                        value="<%= item %>" required>
                    <label class="form-check-label" for="teriacontrole<%= item %>">
                        <%= item %>
                    </label>
                </div>
                <% }) %>
            </p>
            <hr />
            <button class="btn btn-lg btn-success">Salvar Cadastro</button>
            <button type="reset" class="btn btn-lg btn-info">Limpar Campos</button>
        </form>
    </div>

    <% include partials/footer %>